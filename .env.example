# KonveyN2AI Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# Required API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Optional API Keys
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=konveyn2ai
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# Service Configuration
PORT=8001
HOST=0.0.0.0
SERVICE_NAME=amatya-role-prompter

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
# For production, set specific origins or leave empty for secure defaults

# Performance Configuration
MAX_RETRIES=3
RETRY_DELAY_BASE=1.0
REQUEST_TIMEOUT=30.0

# AI Model Configuration
VERTEX_AI_MODEL=gemini-2.0-flash-001
GEMINI_MODEL=gemini-2.0-flash-001
VERTEX_AI_TEMPERATURE=0.2
VERTEX_AI_MAX_TOKENS=300
VERTEX_AI_TOP_K=40
VERTEX_AI_TOP_P=0.8

# Vector Index Configuration
VECTOR_DIMENSIONS=3072
SIMILARITY_METRIC=cosine
APPROXIMATE_NEIGHBORS_COUNT=150

# Service URLs (for local development)
AMATYA_SERVICE_URL=http://localhost:8001
JANAPADA_SERVICE_URL=http://localhost:8002
SVAMI_SERVICE_URL=http://localhost:8003


